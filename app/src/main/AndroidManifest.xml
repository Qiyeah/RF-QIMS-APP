        <activity android:name="com.zhilian.hzrf_oa.ui.activity.FileCabinetActivity"/>
        <!-- 收文归档（详情） -->
        <activity android:name="com.zhilian.hzrf_oa.ui.activity.ReceiveCabDetail"/>
