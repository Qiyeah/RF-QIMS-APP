        <activity android:name="com.zhilian.hzrf_oa.ui.activity.AchieveManageActivity"/>
        <!-- 一般阅知（详情） -->
        <activity android:name="com.zhilian.hzrf_oa.ui.activity.AchieveDetail"/>

