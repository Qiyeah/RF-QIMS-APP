<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#fff"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#6495ED"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_left_white"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发文呈批笺"
            android:textSize="16sp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_weight="1.0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:focusable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="拟稿科室"
                android:gravity="center"
                android:background="#F1F9FF"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#DCDCDC"/>

            <TextView
                android:id="@+id/dname"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="30dp"
                android:inputType="textMultiLine"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#DCDCDC"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="拟稿时间"
                android:gravity="center"
                android:background="#F1F9FF"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#DCDCDC"/>

            <TextView
                android:id="@+id/starttime"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC"/>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="拟稿人"
                android:gravity="center"
                android:background="#F1F9FF"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#DCDCDC"/>

            <TextView
                android:id="@+id/uname"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginLeft="5dp"
                android:singleLine="true"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#DCDCDC"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="校稿人"
                android:gravity="center"
                android:background="#F1F9FF"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#DCDCDC"/>

            <TextView
                android:id="@+id/testuname"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
               />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC"/>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="密级"
                android:gravity="center"
                android:background="#F1F9FF"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#DCDCDC"/>

            <TextView
                android:id="@+id/security"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#DCDCDC"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="份数"
                android:gravity="center"
                android:background="#F1F9FF"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#DCDCDC"/>

            <TextView
                android:id="@+id/count"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
               />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC"/>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="主送"
                android:gravity="center"
                android:background="#F1F9FF"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#DCDCDC"/>

            <TextView
                android:id="@+id/send1"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
               />

        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC"/>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="抄送"
                android:gravity="center"
                android:background="#F1F9FF"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#DCDCDC"/>

            <TextView
                android:id="@+id/send2"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC"/>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="文号"
                android:gravity="center"
                android:background="#F1F9FF"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#DCDCDC"/>

            <TextView
                android:id="@+id/docno"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="无文号"/>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC"/>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="文件标题"
                android:gravity="center"
                android:background="#F1F9FF"/>

            <View

                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#DCDCDC"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:gravity="center"/>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC"/>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="正文"
                android:gravity="center"
                android:background="#F1F9FF"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#DCDCDC"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/openfile"
                    android:layout_width="85dp"
                    android:layout_height="25dp"
                    android:text="查看正文"
                    android:textSize="12sp"
                    android:textColor="#6495ED"
                    android:paddingLeft="10dp"
                    android:paddingBottom="2dp"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/button4"
                    android:background="@drawable/button_style2"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 请在此处审阅正文"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC"/>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="文件列表"
                android:gravity="center"
                android:background="#F1F9FF"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#DCDCDC"/>

            <ListView
                android:id="@+id/fj_list"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="4"
                android:layout_marginLeft="10dp"
                android:divider="#F5F5F5"
                android:dividerHeight="1dip">
            </ListView>


        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC"/>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:singleLine="false"
                android:text="批办意见\n及\n领导意见"
                android:gravity="center"
                android:background="#F1F9FF"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#DCDCDC"/>

                <ListView
                    android:id="@+id/opinionList"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="4"
                    android:layout_marginLeft="10dp"
                    android:divider="#F5F5F5"
                    android:dividerHeight="1dip">
                </ListView>


        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC"/>

    </TableLayout>
    </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff">

        <Button
            android:id="@+id/record"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:text="记录"
            android:textSize="12sp"
            android:textColor="#696969"
            android:paddingLeft="10dp"
            android:paddingBottom="2dp"
            android:drawableLeft="@drawable/button1"
            android:background="@drawable/button_style1"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            />

        <Button
            android:id="@+id/tianxieyijian"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:text="填写意见"
            android:textSize="12sp"
            android:textColor="#6495ED"
            android:paddingLeft="10dp"
            android:paddingBottom="2dp"
            android:drawableLeft="@drawable/button2"
            android:background="@drawable/button_style2"
            android:layout_alignTop="@+id/record"
            android:layout_toLeftOf="@+id/record"
            android:layout_toStartOf="@+id/record"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/submit"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:text="提交"
            android:textSize="12sp"
            android:textColor="#6495ED"
            android:paddingLeft="10dp"
            android:paddingBottom="2dp"
            android:drawableLeft="@drawable/button3"
            android:background="@drawable/button_style2"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tianxieyijian"
            android:layout_toStartOf="@+id/tianxieyijian"
            android:layout_marginRight="5dp"/>
    </RelativeLayout>

</LinearLayout>